{
	"name": "sample-app",
	"version": "1.0.0",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"start": "npm run db:migrate && node dist/src/index.js",
		"start:dev": "nodemon",
		"build": "tsc && tsc-alias",
		"k8-build": "npm run build && touch dist/.env",
		"compile": "tsc",
		"knex": "ts-node -r dotenv/config ./node_modules/knex/bin/cli.js",
		"db:migrate:make": "npm run knex -- migrate:make",
		"db:migrate": "npm run knex -- migrate:latest --knexfile ./knexfile.ts",
		"db:migrate:rollback": "npm run knex -- migrate:rollback",
		"test": "jest --forceExit --no-cache --runInBand",
		"pre-test": "/bin/bash ./pre-test-script.sh",
		"post-test": "/bin/bash ./post-test-script.sh",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage"
	},
	"dependencies": {
		"@withshepherd/faker": "^5.5.5",
		"axios": "^1.7.2",
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"dayjs": "^1.11.11",
		"dockerode": "^4.0.2",
		"dotenv": "^16.4.5",
		"http-status-codes": "^2.3.0",
		"jest": "^29.7.0",
		"joi": "^17.13.1",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"mysql2": "^3.9.7",
		"nodemailer": "^6.9.13",
		"objection": "^3.1.4",
		"redis": "^4.6.14",
		"reflect-metadata": "^0.2.2",
		"restana": "^4.9.9",
		"testcontainers": "3.2.0",
		"ts-node": "^10.9.2",
		"tsyringe": "^4.8.0",
		"typescript": "^5.4.5",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@testcontainers/mysql": "^10.9.0",
		"@testcontainers/redis": "^10.9.0",
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^29.5.12",
		"@types/joi": "^17.2.3",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.12.12",
		"@types/uuid": "^9.0.8",
		"eslint": "^9.3.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"nodemon": "^3.1.1",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.4",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0"
	},
	"_moduleAliases": {
		"@app": "src",
		"@config": "src/config",
		"@db": "src/db",
		"@middlewares": "src/middlewares",
		"@models": "src/models",
		"@modules": "src/modules",
		"@repositories": "src/repositories",
		"@shared": "src/shared"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts,json",
		"ignore": [
			"src/**/*.spec.ts"
		],
		"exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"../jest.setup.ts"
		],
		"testTimeout": 100000,
		"moduleNameMapper": {
			"^@app/(.*)$": "<rootDir>/$1",
			"^@config/(.*)$": "<rootDir>/config/$1",
			"^@db/(.*)$": "<rootDir>/db/$1",
			"^@middlewares/(.*)$": "<rootDir>/middlewares/$1",
			"^@models/(.*)$": "<rootDir>/models/$1",
			"^@modules/(.*)$": "<rootDir>/modules/$1",
			"^@repositories/(.*)$": "<rootDir>/repositories/$1",
			"^@shared/(.*)$": "<rootDir>/shared/$1"
		}
	}
}
